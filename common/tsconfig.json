{
  "compilerOptions": {
    "target": "es2015",
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "CommonJS",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": false,
    "composite": true,
    "baseUrl": "./",
    "outDir": "./dist"
  },
  "include": [
    "src/**/*",
  ]
}